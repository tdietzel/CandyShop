@model Candy.Models.Treat
<!DOCTYPE html>
<html>
  <head>
    <title>Add Flavors</title>
    <link 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" 
      rel="stylesheet" 
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" 
      crossorigin="anonymous">
    <meta charset='utf-8'>
  </head>
  <body style="background-color: #b1b1fc">
    <div style="text-align: center; display: flex; flex-direction: column; align-content: center; justify-content: center; height: 90vh">
      <h1>Add a new flavor to @Model.Name</h1>

      @using (Html.BeginForm())
      {
        @Html.HiddenFor(model => model.TreatId)
        @Html.Label("Select Flavor")
        @Html.DropDownList("FlavorId")
        <input class="btn btn-primary" name="submit" type="submit" value="Submit" />
      }
      @Html.ActionLink($"Go back to details", "Detail", new { id = Model.TreatId })
    </div>
  </body>
</html>
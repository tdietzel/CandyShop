@using Candy.Models

<!DOCTYPE html>
<html>
  <head>
    <title>Flavor Overview</title>
    <link 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" 
      rel="stylesheet" 
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" 
      crossorigin="anonymous">
    <meta charset='utf-8'>
  </head>
  <body>
    <div class="navbar navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand">Flavors</a>
        <ul class="navbar-nav mr-auto" style="display: flex; flex-direction: row">
          <li class="nav-item" style="display: flex; align-items: center; justify-content: center">
            @Html.ActionLink("Home Page |", "Index", "Home", null, new { @class = "nav-link" })
            &nbsp;
          </li>
          <li class="nav-item" style="display: flex; align-items: center; justify-content: center">
            @Html.ActionLink(" Treats |", "Index", "Treat", null, new { @class = "nav-link" })
            &nbsp;
          </li>
          <li class="nav-item" style="display: flex; align-items: center; justify-content: center">
            @Html.ActionLink("Flavors", "Index", "Flavor", null, new { @class = "nav-link" })
          </li>
        </ul>
        <ul class="navbar-nav">
          <li class="nav-item">
            @if (User.Identity.IsAuthenticated)
            {
              <span class="navbar-text">@User.Identity.Name</span>
              @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { @class = "form-inline" }))
              {
                <button type="submit" class="btn btn-link text-white">Log Out</button>
              }
            }
            else
            {
              <ul class="navbar-nav">
                <li class="nav-item">
                  @Html.ActionLink("Register", "Register", "Account", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                  @Html.ActionLink("Login", "Login", "Account", null, new { @class = "nav-link" })
                </li>
              </ul>
            }
          </li>
        </ul>
      </div>
    </div>

    <div style="text-align: center; background-color: #fe5b6e; height: 90vh;">
      @Html.ActionLink("Add a new Flavor", "Create")
      <hr />
      @if (Model.Count == 0)
      {
        <h3>No flavors have been added yet!</h3>
      }
      else
      {
        @foreach (Flavor flavor in Model)
        {
          <div style="text-align: center">
            <h3 style="background-color: rgb(210, 207, 207); padding: .5rem; margin-bottom: 1rem;">@Html.ActionLink($"{@flavor.Name}", "Detail", new { id = flavor.FlavorId })</h3>
          </div>
        }
      }
    </div>
  </body>
</html>
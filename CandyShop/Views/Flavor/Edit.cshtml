@model Candy.Models.Flavor

<!DOCTYPE html>
<html>
  <head>
    <title>Edit @Model.Name</title>
    <link 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" 
      rel="stylesheet" 
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" 
      crossorigin="anonymous">
    <meta charset='utf-8'>
  </head>
  <body>
    <div style="text-align: center">
      <h1>Edit flavor: @Model.Name</h1>
      @using (Html.BeginForm())
      {
        @Html.HiddenFor(model => model.FlavorId)
        <h3>Name</h3>
        @Html.EditorFor(model => model.Name)
        <br />
        <h3>Description</h3>
        @Html.EditorFor(model => model.Description)
        <br />
        <p style="margin: 0">@Html.ActionLink("Add Treat", "AddTreat", new { id = $"{@Model.FlavorId}"})</p>
        <input name="submit" type="submit" value="Save" id="submit" />
      }
      @using (Html.BeginForm("Delete", "Flavor", FormMethod.Post))
      {
        <input type="hidden" value="@Model.FlavorId" name="flavorId"/>
        <input name="submit" type="submit" value="Delete" />
      }

      @Html.ActionLink("Go back to Flavors", "Index")
    </div>
  </body>
</html>